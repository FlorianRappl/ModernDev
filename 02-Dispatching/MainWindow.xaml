<Window x:Class="ModernDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beispiel 2 - Dispatching" Height="350" Width="525">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        
        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center"
                  Content="Ereignis im Code ausführen" x:Name="Trigger" />
        
        <Button Content="Code ausführen" Grid.Row="1" Click="OnButtonClick" />
        
        <ListBox x:Name="Liste" Grid.Row="2" />
    </Grid>
</Window>
