<Window x:Class="ModernDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Sprache wählen:" Margin="10"
                   VerticalAlignment="Center" />

        <ComboBox Grid.Row="1" x:Name="MyLanguages" Margin="10"
                  SelectionChanged="OnSelected" />

        <TextBlock Grid.Row="2" Text="Name eingeben:" Margin="10"
                   VerticalAlignment="Center" />
        
        <TextBox x:Name="MyName" Grid.Row="3" Margin="10"
                 VerticalContentAlignment="Center" />
        
        <Button Grid.Row="4" Click="OnButtonClick" Content="Ausführen" Margin="10" />
    </Grid>
</Window>
